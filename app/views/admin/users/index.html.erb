<script>

    $(document).ready(function () {
      $('.sidebar-remain-open').click();
    });

</script>
<div class="table-responsive main-client-listing">
  <div id="client-message"></div>
  <table class="table hover table-dark" id="user-listing">
    <caption>
      <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
          <span class="pull-left lead-text">
            <%="User : #{@users.count} "%>
          </span>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
        <%if false%>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-search"></i></span>
          <input aria-invalid="false" aria-required="true" class="form-control input-md valid " type="text" id="primary-search" placeholder="Search by name or Code">
        </div>
        <%end%>
      </div>
      <%if is_viewable%>
       <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
          <%= link_to '<i class="fa fa-plus"></i>&nbsp;&nbsp;Add user'.html_safe, new_admin_user_path, remote: true, class: "btn btn-primary btn-block btn-rad", style: "height: 35px;padding: 7px 11px" %>
          
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
          <%= link_to '<i class="fa fa-plus"></i>&nbsp;&nbsp;Import/Export'.html_safe, new_admin_user_path(import_export: "true"), remote: true, class: "btn btn-primary btn-block btn-rad", style: "height: 35px;padding: 7px 11px" %>
          
        </div>
      <% end %>
    </caption>
    <thead>
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th>FirstName</th>
      <th>LastName</th>
      
      <th>Area</th>
      <th>UserCode</th>
      <th>Division</th>
      <%if is_viewable%>
        <th>Actions</th>
      <%end%>
    </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <%= render :partial => 'listing', :locals => {:user => user, :index => index} %>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row no-margin no-margin">

  <div class="col-md-6 col-md-offset-4" id="com-pagination"><%= will_paginate @users, renderer: BootstrapPagination::Rails %></div>
  
</div>

<div id="user-popup"></div>


<script>
  $('.user-delete').on('click', function () {
    $('#custom-confirm-box').find('.delete').attr("data-remote", true);
  });
</script>

