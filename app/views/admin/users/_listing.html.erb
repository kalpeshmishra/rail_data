<tr id=<%=user.id.to_s%>>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.email rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.admin rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.first_name rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.last_name rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.area rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.user_code rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= user.division.code rescue '' %></span></td>

  <%if is_viewable%>
    <td class="text-center" style="white-space: nowrap">
      <span class="view-location-<%= index %>">
        <%= link_to '<i class="fa fa-plus"></i>'.html_safe, edit_admin_user_role_path(user), :remote => true, class: "label label-default", title: "Add User Role" %>

        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_user_path(user), :remote => true, class: "label label-default", title: "Edit User" %>
        
        <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, "javascript:;", class: 'label label-danger user-delete', data: {toggle: "modal", method_type: "delete", link: admin_user_path(user.id), message: "You really want to delete this User?", target: "#custom-confirm-box"}, remote: true, title: "Delete User" %>
  	  </span>
    </td>
  <%end%>
</tr>
     