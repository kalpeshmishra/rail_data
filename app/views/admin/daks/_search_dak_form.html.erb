<style>
.add-cursor {cursor: pointer;}
.add-cursor span {cursor: pointer;display: inline-block;position: relative;transition: 0.5s;}
tr td{
  padding: 2 !important;
  margin: 0 !important;
}

</style>

<% @method = "GET" %>
<% @url = admin_daks_path%>
<div>
	<div>
		<h2>Search Sent Letter's</h2>
		<%= form_tag(@url, method: @method, class: 'form-horizontal', id: 'send-dak-form', remote: true) do |form| %>  
				<table class="table table-sm" style="width: 70%;">
					<tbody>
					<tr>
			    	<td>Letter Type
			    		<%= (select_tag "letter_type", options_for_select(@letter_type_list), {prompt: 'Select', class: "form-control  input-sm letter_type", style: "width: 150px;font-size:12px;"}).html_safe %>
			    	</td>
			    	<td>Letter Date (From)
			    		<%= text_field_tag "from_letter_date", '', type: 'date', id: "date",class: 'form-control input-md from_letter_date', style: "width: 145px; font-size:12px;"%>
			    		<p></p>
			    	</td>
			    	<td>Letter Date (To)
			    		<%= text_field_tag "to_letter_date", '', type: 'date', id: "date",class: 'form-control input-md to_letter_date', style: "width: 145px; font-size:12px;"%>
			    		<p></p>
			    	</td>
			    	<td>Letter No.
			    		<%= text_field_tag "letter_number", '',placeholder: 'Enter Letter Number', id: "letter_number", class: 'form-control input-md letter_number', style: "width: 210px; font-size:12px;"%>
			    	</td>
			    </tr>
			    <tr>
			    	<td>Receiver
			    		<%= (select_tag "receiver_list", options_for_select(@dak_search_recipient_list), {prompt: 'Select', class: "form-control  input-sm receiver_list",required: true, style: "width: 150px;font-size:12px;"}).html_safe %>
			    	</td>
			    	<td>Dispatch Date (From)
			    		<%= text_field_tag "from_dispatch_date", '', type: 'date', id: "date",class: 'form-control input-md from_dispatch_date', required: true, style: "width: 145px; font-size:12px;"%>
			    	</td>
			    	<td>Dispatch Date (To)
			    		<%= text_field_tag "to_dispatch_date", '', type: 'date', id: "date",class: 'form-control input-md to_dispatch_date', required: true, style: "width: 145px; font-size:12px;"%>
			    	</td>
			    	<%= hidden_field_tag(:search_data, true) %>
			    	<td style="text-align: center; vertical-align: middle;">
			    		 <button class="btn btn-primary btn-flat submit" type="submit"><i class="fa fa-search submit"></i>Search</button>
			    	</td>
			    </tr>
			    </tbody>
			</table>

		<% end %>
	</div>
	<div id="dak_seach_data_form">
	</div>

</div>
