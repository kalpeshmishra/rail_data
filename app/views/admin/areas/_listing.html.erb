<tr id=<%=area.id.to_s%>>
  <td class="text-center"><span class="view-location-<%= index %>"><%= area.railway_zone.code rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= area.division.code rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= area.area_code rescue '' %></span></td>
  <td class="text-center"><span class="view-location-<%= index %>"><%= area.area_name rescue '' %></span></td>
  
  <%if is_viewable%>
    <td class="text-center" style="white-space: nowrap">
      <span class="view-location-<%= index %>">
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_area_path(area), :remote => true, class: "label label-default", title: "Edit Area" %>
        
       

        <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, "javascript:;", class: 'label label-danger area-delete', data: {toggle: "modal", method_type: "delete", link: admin_area_path(area.id), message: "You really want to delete this Area?", target: "#custom-confirm-box"}, remote: true, title: "Delete Area" %>
      </span>
    </td>
  <%end%>
</tr>
     