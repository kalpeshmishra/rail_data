<script>

    $(document).ready(function () {
      $('.sidebar-remain-open').click();
    });

</script>
<div class="table-responsive employee-main-listing">
  <div id="client-message"></div>
  <table class="table hover table-dark" id="employee-listing">
    <caption>
      <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
          <span class="pull-left lead-text">
            <%="Employee :  "%>
          </span>
      </div>
      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-search"></i></span>
          <input aria-invalid="false" aria-required="true" class="form-control input-md valid " type="text" id="primary-search" placeholder="Search by name or Code">
        </div>
      </div>
      <%if is_viewable%>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
          <%= link_to '<i class="fa fa-plus"></i>&nbsp;&nbsp;Add Employee'.html_safe, new_admin_employee_path,  class: "btn btn-primary btn-block btn-rad", style: "height: 35px;padding: 7px 11px" %>
        </div>
      <%end%>
    </caption>
    <thead>
    <tr>
      <th>SrNo</th>
      <th>Employee's Name</th>
      <th>PF or NPS No.</th>
      <th>Aadhaar No.</th>
      <th>Mobile No.</th>
      <th>Current Post</th>
      <th>Group</th>
      <th>Level</th>
      <th>GradePay</th>
      <th>Current Station</th>
      <%if is_viewable%>
        <th>Actions</th>
      <%end%>
    </tr>
    </thead>
    <tbody>
    <%if @employees.present?%>
    	<%@employees.each_with_index do |emp,index|%>
    		<tr id=<%=emp.id.to_s%>>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= index+1 rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= "#{emp.first_name} #{emp.last_name}" rescue '' %></span></td>
          <td class="text-center"><span class="view-location-<%= index %>"><%= emp.emp_number rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.aadhaar rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.mobile_no rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.employee_post.post_code rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.employee_post.group rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.employee_post.level_p7 rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.employee_post.grade_pay_p6 rescue '' %></span></td>
			  	<td class="text-center"><span class="view-location-<%= index %>"><%= emp.station.code rescue '' %></span></td>
			  	<%if is_viewable%>
				    <td class="text-center" style="white-space: nowrap">
				      <span class="view-location-<%= index %>">
				        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_admin_employee_path(emp),  class: "label label-default", title: "Edit Employee" %>
				       
				        <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, "javascript:;", class: 'label label-danger employee-delete', data: {toggle: "modal", method_type: "delete", link: admin_employee_path(emp.id), message: "You really want to delete this Employee?", target: "#custom-confirm-box"}, remote: true, title: "Delete Employee" %>
				      </span>
				    </td>
				  <%end%>
			  </tr>	
    	<%end%> 
    <%end%> 
    </tbody>
  </table>
</div>
<div class="row no-margin no-margin">
	<div class="col-md-9 col-md-offset-2" id="com-pagination"><%= will_paginate @employees, renderer: BootstrapPagination::Rails %></div>
</div>

<div id="employee-popup"></div>


<script>
  $('.employee-delete').on('click', function () {
    $('#custom-confirm-box').find('.delete').attr("data-remote", true);
  });
</script>