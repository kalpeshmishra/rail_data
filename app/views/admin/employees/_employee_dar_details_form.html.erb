<script>
  $(function(){ 
    $('.add-dar-detail, .add-dar-edit').on('click',function(){
      dar_edit_id = ".add_dar_row_"+$(this).attr('id');
      if (dar_edit_id != "") {
        $(emp_dar_record_id).val($(this).attr('id'));
        $(dar_type).val($(dar_edit_id).find('td:eq(1)').html());
        $(dar_issue_date).val(moment($(dar_edit_id).find('td:eq(2)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(received_at_station_date).val(moment($(dar_edit_id).find('td:eq(3)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(employee_acknowledge_date).val(moment($(dar_edit_id).find('td:eq(4)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(defense_submit_by_employee_date).val(moment($(dar_edit_id).find('td:eq(5)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(defense_acknowledge_sent_to_dar_date).val(moment($(dar_edit_id).find('td:eq(6)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(nip_received_date).val(moment($(dar_edit_id).find('td:eq(7)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(nip_acknowledge_sent_to_dar_date).val(moment($(dar_edit_id).find('td:eq(8)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(sf_7_issue_date).val(moment($(dar_edit_id).find('td:eq(9)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(finding_report_issue_date).val(moment($(dar_edit_id).find('td:eq(10)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(acknowledge_finding_report).val(moment($(dar_edit_id).find('td:eq(11)').html(), "DD-MM-YYYY").format("YYYY-MM-DD"));
        $(dar_remark).val($(dar_edit_id).find('td:eq(12)').html());
      }  

       
      $("#add_dar_modal").modal('show');
    });  

    $(".employee-dar-save").on('click',function(){
        employee_id = $("#record_id").val();
        emp_dar_type = $("#dar_type").val();
        emp_dar_issue_date = $("#dar_issue_date").val();
        emp_received_at_station_date = $("#received_at_station_date").val();
        emp_employee_acknowledge_date = $("#employee_acknowledge_date").val();
        emp_defense_submit_by_employee_date = $("#defense_submit_by_employee_date").val();
        emp_defense_acknowledge_sent_to_dar_date = $("#defense_acknowledge_sent_to_dar_date").val();
        emp_nip_received_date = $("#nip_received_date").val();
        emp_nip_acknowledge_sent_to_dar_date = $("#nip_acknowledge_sent_to_dar_date").val();
        emp_sf_7_issue_date = $("#sf_7_issue_date").val();
        emp_finding_report_issue_date = $("#finding_report_issue_date").val();
        emp_acknowledge_finding_report = $("#acknowledge_finding_report").val();
        emp_dar_remark = $("#dar_remark").val();
      
      if (emp_dar_type!="" && emp_dar_issue_date!="" && emp_received_at_station_date!="" && emp_employee_acknowledge_date!="") { 
        $.ajax({
          type: "post",
          url: "/admin/employees.js?is_add_employee_dar=" + "true"+ "&employee_id="+ employee_id +"&emp_dar_type=" + emp_dar_type + "&emp_dar_issue_date=" + emp_dar_issue_date + "&emp_received_at_station_date=" + emp_received_at_station_date + "&emp_employee_acknowledge_date=" + emp_employee_acknowledge_date + "&emp_defense_submit_by_employee_date=" + emp_defense_submit_by_employee_date + "&emp_defense_acknowledge_sent_to_dar_date=" + emp_defense_acknowledge_sent_to_dar_date + "&emp_nip_received_date=" + emp_nip_received_date + "&emp_nip_acknowledge_sent_to_dar_date=" + emp_nip_acknowledge_sent_to_dar_date + "&emp_sf_7_issue_date=" + emp_sf_7_issue_date + "&emp_finding_report_issue_date=" + emp_finding_report_issue_date + "&emp_acknowledge_finding_report=" + emp_acknowledge_finding_report+ "&emp_dar_remark=" + emp_dar_remark
        });
        
        $(".add_dar_error").hide(); 
        $("#add_dar_modal").find('.close').click();
      }
      else{
        var error_msg ="Select All Feilds"
        $("#add_dar_error").text(error_msg).css({'color': 'red', 'background-color': 'yellow', 'font-weight' : 'bold'});
        
        $(".add_dar_error").show();
      }  

    });

    $(".add-dar-danger").on('click',function(){
      delete_dar_detail_id = $(this).attr('id')
      $("#add-dar-delete-modal").modal('show');
    });

    $("#confirm_add_dar_delete").click(function () {
      $("#add-dar-delete-modal").modal('hide');
      remove_row = "#add_dar_row_id_"+delete_dar_detail_id
      $(remove_row).remove('');
      
      if (delete_dar_detail_id != "") {
        $.ajax({
          type: "get",
          url: "/delete_employee_dar_detail.js?delete_dar_detail_id=" + delete_dar_detail_id
        });
      }
    });


  }); 

  $(document).on('hidden.bs.modal','#add_dar_modal', function () {
    $("#add_dar_post").val("");
    $("#dar_type").val("");
    $("#dar_date").val("");
    $("#dar_remark").val("");
    $("#dar_letter_date").val("");
    $("#dar_letter_number").val("");
    $(".add_dar_error").hide();

  });

</script>