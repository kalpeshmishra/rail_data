<div class="tab-container" id="custom_reports">
<h3 align="center">Loading Unit Station Wise (ADI Area)</h3>
<p id="adi_station_heading" style="font-size: 16px;color:#cc3d16;"></p>

<table class="table hover table-bordered" id="custom-reports">
  <thead class="thead-dark">
    <tr  style="color: #fff; background: #4B4B4D;">
      <%column_hash = {}%>
      <%puts @custom_report_header_hash%>
      <%if @custom_report_header_hash.present?%>
        <%header = ["Date"] + @custom_report_header_hash.keys%>
        <%header.each do |label| %>
          <%colspan = @custom_report_header_hash[label].present? ? @custom_report_header_hash[label][:header].count : 1%>

          <th style="vertical-align: middle;" colspan="<%=colspan%>"><%=label%></th>
        <%end%>
      <%end%>
    </tr>

    <tr  style="color: #fff; background: #4B4B4D;">
      <%column_hash = {}%>
      <%puts @custom_report_header_hash%>
      <%if @custom_report_header_hash.present?%>
        <%header.each do |label| %>
          <%if @custom_report_header_hash[label].present?%>
            <%@custom_report_header_hash[label][:header].each do |child_label|%>
              <td style="vertical-align: middle;"><%=child_label%></td>
            <%end%>
          <%else%>
            <td style="vertical-align: middle;"></td>
          <%end%>
          
          
        <%end%>
      <%end%>
    </tr>


  </thead>
  <tbody>
    
  </tbody>
</table>
</div>
<script>
  $(function () {
    effective_from = $("#start_date").val();
    effective_to = $("#end_date").val();
    document.getElementById("adi_station_heading").innerHTML="Period From: "+effective_from+" To: "+effective_to;
  });
</script>
