$("#rake_load_form").remove('');
$("#rake_load_new_form").html('<%= j render 'rake_load_new'%>');
$('.arrival_date').each(function(i) {
  var row_no = $(this).attr('id').split('_')[2]
  var arrival_date_id = "#arrival_date_"+row_no
  var mydate = $("#datepicker").val();
  var parts = mydate.split('/');
  set_arrival_date = parts[2] + '-' + parts[1] + '-' + parts[0];
  $(arrival_date_id).attr("max", set_arrival_date);
  $(arrival_date_id).attr("min", "2017-01-01");

});
