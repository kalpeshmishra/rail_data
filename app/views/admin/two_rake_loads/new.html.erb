<div id="two_rake_load_new_form"></div>
<script>
  var old_date = '<%=Date.today.strftime("%d/%m/%Y")%>';
  $(function () {
    $("#datepicker").datepicker({ 
          autoclose: true, 
          format:"dd/mm/yyyy",
          todayHighlight: true,
    });

    $("#datepicker").on("change",function(){
      $("#two_rake_load_new_form").empty();
    });

    $('#datepicker').datepicker('setDate', 'today');
    
  });
  $(".submit").click(function () {
    effective_from = $("#datepicker").val();
    $.ajax({
      type: "get",
      url: "/admin/two_rake_loads/new.js?data=" + effective_from

    });
    old_date = effective_from 
  });
  

</script>